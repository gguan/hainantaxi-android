<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTitle">
        <attr name="title_left_type" format="enum">
            <enum name="text" value="1" />
            <enum name="image" value="2" />
            <enum name="layout" value="3" />
        </attr>

        <attr name="title_right_type" format="enum">
            <enum name="text" value="1" />
            <enum name="image" value="2" />
            <enum name="layout" value="3" />
        </attr>

        <attr name="title_center_type" format="enum">
            <enum name="text" value="1" />
            <enum name="layout" value="3" />
        </attr>

        <attr name="title_left_text" format="string"></attr>
        <attr name="title_right_text" format="string" />
        <attr name="title_center_text" format="string"></attr>

        <attr name="title_left_text_size" format="reference|float|dimension"></attr>
        <attr name="title_center_text_size" format="reference|float|dimension"></attr>
        <attr name="title_right_text_size" format="reference|float|dimension"></attr>

        <attr name="title_left_text_color" format="reference|color|integer"></attr>
        <attr name="title_center_text_color" format="reference|color|integer"></attr>
        <attr name="title_right_text_color" format="reference|color|integer"></attr>

        <attr name="title_left_image_src" format="reference" />
        <attr name="title_right_image_src" format="reference" />
    </declare-styleable>
</resources>